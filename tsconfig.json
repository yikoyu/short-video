{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types/"]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
  ],
  "exclude": ["node_modules", "dist", ".output", "**/*.js"]
}